<h4 class="text-xl sm:text-xl lg:text-3xl leading-none font-extrabold text-gray-900 tracking-tight mt-5 mb-5">
  Add new BackMaker
</h4>

<%= form_for(@backmaker) do |f| %>

  <div class="block relative w-1/3 mt-5 mb-5">
    <%= f.label :name %>
    <%= f.text_field :name,
                     placeholder: 'Madame Michu',
                     autofocus: true,
                     class: 'block appearance-none w-full bg-white border border-gray-100 hover:border-indigo-100 px-4 py-2 pr-8 mt-1 rounded shadow leading-tight focus:outline-none focus:shadow-outline'%>

    <%= f.submit :Save, class: 'inline-flex py-2 px-4 mt-5 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>

<% end %>
